{
  "name": "alsarie-one",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && tsx watch index.ts",
    "dev:client": "cd client && vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "cd server && tsc",
    "start": "cd server && node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node migrations/scripts/migrate.js",
    "db:setup": "node migrations/scripts/setup-database.js",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.0",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "postgres": "^3.4.4",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vite": "^5.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "drizzle-kit": "^0.20.0"
  }
}